<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>PUJAPATH - Book Pandit Online</title>

  <!-- Bootstrap CSS -->
  <link 
    rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
    crossorigin="anonymous" 
  />

  <link rel="stylesheet" href="/css/bootstrap.min.css" />
  <link rel="icon" href="/favicon.ico" />

  <style>
    .circle-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background-color: #ffc107;
      color: #000;
      font-weight: bold;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="#">PujaPath.com</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link active" href="/dashboard">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
          <li class="nav-item"><a class="nav-link" href="#services">Services</a></li>
        </ul>

        <!-- Guest (Not Logged In) -->
        <div class="d-flex align-items-center" id="authButtons">
          <a href="/login" class="btn btn-outline-light me-2">Login</a>
          <a href="/register" class="btn btn-warning">Register</a>
        </div>

        <!-- Logged In User -->
        <div class="d-flex align-items-center d-none" id="userProfile">
          <div id="userInitials" class="circle-avatar me-2"></div>
          <span id="userName" class="text-white fw-bold me-2"></span>
          <button class="btn btn-sm btn-danger" onclick="handleLogout()">Logout</button>
        </div>
      </div>
    </div>
  </nav>

  <!-- HERO SECTION -->
  <header class="text-center bg-light py-5">
    <div class="container">
      <img src="/images/pandit.image.jpg" class="img-fluid rounded mb-4" alt="Pandit Image" style="max-height: 400px;" />
      <h1 class="display-4 fw-bold">Book Pandit Ji for Any Puja</h1>
      <p class="lead">Professional Vedic Purohits at your doorstep. Easy Booking. All rituals covered.</p>
      <a href="/book" class="btn btn-primary btn-lg">Book Now</a>
    </div>
  </header>

  <!-- ABOUT -->
  <section id="about" class="py-5">
    <div class="container text-center">
      <h2>Why Choose PujaPath?</h2>
      <div class="row align-items-center mt-4">
        <div class="col-md-6">
          <p>We connect you with experienced Pandits for all Vedic pujas. Hassle-free booking, verified purohits, regional support.</p>
          <ul class="list-unstyled">
            <li>✔️ Verified & Experienced Pandits</li>
            <li>✔️ All Pujas: Griha Pravesh, Katha, Marriage, Shanti</li>
            <li>✔️ Available Across India in Your Language</li>
          </ul>
        </div>
        <div class="col-md-6">
          <img src="/images/about.png" class="img-fluid rounded" alt="About Image" />
        </div>
      </div>
    </div>
  </section>

  <!-- SERVICES -->
  <section id="services" class="bg-light py-5">
    <div class="container text-center">
      <h2>Our Services</h2>
      <div class="row mt-4">
        <div class="col-md-4 mb-3">
          <div class="card h-100 shadow">
            <div class="card-body">
              <h5 class="card-title">Griha Pravesh</h5>
              <p class="card-text">Welcome peace and positivity into your new home with expert-guided pujas.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <div class="card h-100 shadow">
            <div class="card-body">
              <h5 class="card-title">Satyanarayan Katha</h5>
              <p class="card-text">Perform katha at home for family peace, health and happiness.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <div class="card h-100 shadow">
            <div class="card-body">
              <h5 class="card-title">Wedding Puja</h5>
              <p class="card-text">All wedding rituals performed as per tradition and community customs.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FOOTER -->
  <footer class="bg-dark text-white text-center py-3 mt-5">
    <p class="mb-0">&copy; 2025 PujaPath. All rights reserved.</p>
  </footer>

  <!-- Bootstrap JS Bundle -->
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
    crossorigin="anonymous">
  </script>

  <!-- User Login/Logout Script -->
  <script>
    const user = localStorage.getItem("pujapathUser")
      ? JSON.parse(localStorage.getItem("pujapathUser"))
      : null;

    if (user) {
      console.log("User is logged in:", user);

      document.getElementById("authButtons").classList.add("d-none");
      document.getElementById("userProfile").classList.remove("d-none");
      document.getElementById("userInitials").textContent = user.name[0].toUpperCase();
      document.getElementById("userName").textContent = user.name;
    } else {
      console.log("User is NOT logged in.");
    }

    function handleLogout() {
      localStorage.removeItem("pujapathUser");
      window.location.reload();
    }
  </script>
</body>
</html>
